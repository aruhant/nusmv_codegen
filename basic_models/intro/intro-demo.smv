MODULE main
VAR
    x: 0 .. 100;
    location: {l1,l2};
    

ASSIGN
    init(x) := 0;
    init(location) := l1;
    next(location) := case
        (location = l1) & (x < 10) : l2;
        (location = l2) : l1;
        TRUE : location;
    esac;
    next(x) := case
        (location = l2 & x < 100) : x + 1;
        TRUE : x;
    esac;